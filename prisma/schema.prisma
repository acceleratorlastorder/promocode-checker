datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Promocode {
  id           String    @id @default(cuid())
  name         String    @unique
  advantage    Json
  restrictions Json
  convertedRule Json      @default("{}")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}